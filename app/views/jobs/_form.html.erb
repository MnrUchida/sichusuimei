<%= simple_form_for @job, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.input :name %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                jobs_path, :class => 'btn' %>
  </div>
<% end %>
