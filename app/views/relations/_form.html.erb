<%= simple_form_for @relation, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.input :code %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :function %>

    <%= f.association :junishis, :value_method => :id, :as => :check_boxes %>

    <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                relations_path, :class => 'btn' %>
  </div>
<% end %>
