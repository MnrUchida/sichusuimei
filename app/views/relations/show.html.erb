<%- model_class = Relation -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= model_class.human_attribute_name(:name) %>:</dt>
  <dd><%= @relation.name %></dd>
  <dt><%= model_class.human_attribute_name(:description) %>:</dt>
  <dd><%= @relation.description %></dd>
  <dt><%= model_class.human_attribute_name(:function) %>:</dt>
  <dd><%= @relation.function %></dd>
  <dt><%= I18n.t("activerecord.attributes.relation.junishis") %>:</dt>
  <dd>
    <table border=1>
      <% @relation.junishi_relations.each do |junishi_reraltion| %>
          <tr>
            <td><%= junishi_reraltion.junishi.name %></td>
          </tr>
      <% end %>
    </table>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_relation_path(@relation), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              relations_path, :class => 'btn' %>
</div>