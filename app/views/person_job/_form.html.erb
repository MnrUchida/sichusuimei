<%= simple_form_for [@person_job.person,@person_job], :url => {:action => action}, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.input :job_id, :collection => Job.scoped.map{|job| [job.name, job.id]}, :include_blank => false %>
  <%= f.input :start_date, :as => :datepicker %>
  <%= f.input :end_date, :as => :datepicker, :start_year => @person.birthday.year %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                person_person_job_index_path(@person_job.person), :class => 'btn' %>
  </div>
<% end %>
