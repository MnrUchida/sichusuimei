<%- model_class = PillarRelation -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= model_class.human_attribute_name(:name) %>:</dt>
  <dd><%= @pillar_relation.name %></dd>
  <dt><%= model_class.human_attribute_name(:base_pillar) %>:</dt>
  <dd><%= @pillar_relation.base_pillar %></dd>
  <dt><%= model_class.human_attribute_name(:target_pillar) %>:</dt>
  <dd><%= @pillar_relation.target_pillar %></dd>
  <dt><%= model_class.human_attribute_name(:target2_pillar) %>:</dt>
  <dd><%= @pillar_relation.target2_pillar %></dd>
  <dt><%= model_class.human_attribute_name(:subject) %>:</dt>
  <dd><%= @pillar_relation.subject %></dd>
  <dt><%= model_class.human_attribute_name(:method) %>:</dt>
  <dd><%= @pillar_relation.method %></dd>
  <dt><%= model_class.human_attribute_name(:arg) %>:</dt>
  <dd><%= @pillar_relation.arg %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pillar_relation_path(@pillar_relation), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pillar_relations_path, :class => 'btn' %>
</div>