<%- model_class = Meishiki -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<table>
  <tr>
    <td colspan=2>
      <%= render :partial => 'base_param', :locals => { :person => @person} %>
    </td>
    <td colspan=2 rowspan=3>
      <%= image_tag url_for(:action => 'image', :id => @person.meishiki.id) %>
    </td>
  </tr>
  <tr>
    <td colspan=2>
      <%= render :partial => 'assist_param', :locals => { :meishiki => @person.meishiki} %>
    </td>
  </tr>
  <tr>
    <td>
        <%= render :partial => 'meishiki', :locals => { :meishiki => @person.meishiki} %>
    </td>
    <td valign="top">
      <%= render :partial => 'relation', :locals => { :meishiki => @person.meishiki} %>
    </td>
  </tr>
  <tr>
    <td colspan=3>
      <%= render :partial => 'sekki_disp', :locals => { :ext_meishiki => @ext_meishiki} %>
    </td>
  </tr>
  <tr>
    <td valign="top">
      <%= render :partial => 'relation_with_year', :locals => { :meishiki => @person.meishiki} %>
    </td>
    <td valign="top">
      <%= render :partial => 'relation_with_month', :locals => { :meishiki => @person.meishiki} %>
    </td>
    <td valign="top">
      <%= render :partial => 'relation_with_day', :locals => { :meishiki => @person.meishiki} %>
    </td>
    <td valign="top">
      <%= render :partial => 'relation_with_season', :locals => { :meishiki => @person.meishiki} %>
    </td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to '大運', taiun_person_path(@person.meishiki), :class => 'btn' %>
  <%= link_to '職業', person_person_job_index_path(@person.id), :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_path(@person.meishiki), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              people_path, :class => 'btn' %>
</div>