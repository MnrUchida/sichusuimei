<h1>一覧</h1>

<table border=1>
  <tr>
    <th><%= I18n.t("activerecord.attributes.meishiki.name") %></th>
    <th><%= I18n.t("activerecord.attributes.meishiki.sex") %></th>
    <th><%= I18n.t("activerecord.attributes.meishiki.birthday") %></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td class="mr10"><%= link_to person.name, person  %></td>
    <td class="mr10"><%= SelectParameters.get_value("sex").key(person.sex.to_i) %></td>
    <td class="mr10"><%= l person.birthday %></td>
    <td class="mr10"><%= link_to 'Edit', edit_person_path(person) %></td>
    <td class="mr10"><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

