<%= simple_form_for @meishiki, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.input :name %>
  <%= f.input :sex, :collection => SelectParameters.get_value("sex") %>
  <%= f.input :day_of_birth, :as => :ui_date_picker, :start_year => Date.today.year - 90, :input_html => {:class => "input-small"} %>
  <%= f.input :limit_date,as: :ui_date_picker %>
  <%= f.input :time_of_birth, :as => :time, :input_html => {:class => "input-small"} %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meishikis_path, :class => 'btn' %>
  </div>
<% end %>
