<h1>一覧</h1>

<table border=1>
  <tr>
    <th><%= I18n.t("activerecord.attributes.meishiki.name") %></th>
    <th><%= I18n.t("activerecord.attributes.meishiki.sex") %></th>
    <th><%= I18n.t("activerecord.attributes.meishiki.birthday") %></th>
    <th></th>
    <th></th>
  </tr>

<% @meishikis.each do |meishiki| %>
  <tr>
    <td class="mr10"><%= link_to meishiki.name, meishiki  %></td>
    <td class="mr10"><%= SelectParameters.get_value("sex").key(meishiki.sex.to_i) %></td>
    <td class="mr10"><%= l meishiki.birthday %></td>
    <td class="mr10"><%= link_to 'Edit', edit_meishiki_path(meishiki) %></td>
    <td class="mr10"><%= link_to 'Destroy', meishiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

