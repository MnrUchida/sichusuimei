<%- model_class = ExtMeishiki -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><%= model_class.human_attribute_name(:name) %>:</dt>
  <dd><%= @ext_meishiki.meishiki.name %></dd>
  <dt><%= model_class.human_attribute_name(:sex) %>:</dt>
  <dd><%= SelectParameters.get_value("sex").key(@ext_meishiki.meishiki.sex.to_i) %></dd>
  <dt><%= model_class.human_attribute_name(:birthday) %>:</dt>
  <dd><%= @ext_meishiki.meishiki.birthday.strftime("%Y/%m/%d %H:%M") %></dd>
</dl>

<%= render 'sekki_input' %>
